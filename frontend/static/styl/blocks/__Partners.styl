.partners {
  max-width: 1440px
  margin: 0 auto
  margin-top: 70px
  &__wrapper {

  }
  &__header {
    padding: 80px 90px 40px 90px
    background-color: #333333;
    &_title{
      color: white
      text-transform uppercase
      font-size 40px
      font-family RobotoLight
      line-height: 50px
    }
  }
  &__item {
    padding: 0px 90px 40px 90px
    background-color: #333333;
    &:last-child{
      padding-bottom: 80px
    }
    &_title{
      font-size: 30px;
      color: white
      font-family RobotoBold
      text-transform uppercase
      line-height: 50px
    }
    &_icon{

      &-img{
        height: 100px
      }
    }
    &_desc{
      font-size: 14px
      line-height: 26px
      color: white
      max-width: 630px
      padding-top: 10px
    }
  }
}