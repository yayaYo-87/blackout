.main__project{
  &_items{
    display: flex
    flex-wrap wrap
    max-width: 1259px
    margin 0 auto
  }
  &_item{
    width: 50%
    flex 1 0 50%
    height: 315px
    overflow: hidden
    position: relative
    &-two{
      flex 1 0 50%
      .main__project_item {
        width: 100%
        flex 1 0 100%
        max-width: 100%
      }
    }
    &-height{
      height: 630px
      .main__project_item-img{

      }
    }
    &-hover{
      transition  .5s
      max-width:50%
      &:after{
        content ''
        width: 40px
        position: absolute
        background-color rgba(255, 255, 255, 0)
        height: 40px
        border: 1px solid white
        bottom: 40px
        left: 315px
        z-index: 5
        transition .5s
      }
      &:before{
        transition .5s
        position: absolute
        left: 317px
        bottom: 41px
        z-index: 6
        width: 40px
        height: 40px
        text-align center
        font-family: RobotoLight
        line-height: 40px
        content: '+'
        font-size 30px
        color: #ffffff
      }
      &:hover{
        .main__project_item-wrapper{
          opacity: 1
        }
        &:after{
          background-color rgba(255, 255, 255, 1)
        }
        &:before{
          color: #000
        }
      }
    }
    &-wrapper{
      position: relative
      padding-top: 40px
      z-index: 2
      cursor: pointer
      height: 100%
      display: flex
      flex-wrap wrap
      color: white
      background-color rgba(0,0,0,0.6)
      opacity: 0
      transition .5s
      &-date{
        font-size 14px
        color: rgba(255,255,255,0.5)
        margin-bottom: 20px
        font-family: RobotoLight
      }
      &-flex{
        flex: 1 0 50%
        width: 50%
        height: 100%
      }
      &_link{
        font-size 14px
        font-family: RobotoRegular
        padding-left: 50px
        position: absolute
        bottom: 40px
        left 50%
        line-height: 40px
      }
      &-desc{
        font-size 14px
        font-family: RobotoRegular
      }
      &_title{
        flex: 1 0 50%
        font-size: 24px;
        font-family: RobotoLight
        text-transform uppercase
        padding-right:  20px
        width: 50%
        height: 100%
      }
    }
    &-img{
      position: absolute
      top: 0px
      left 0px
      width: 100%
      height: 100%
      background-size cover
      background-position center center
    }
    &-title{
      margin-top: 40px
      font-size: 40px;
      font-family RobotoLight
      text-transform uppercase
    }
    &-link{
      font-size: 14px;
      font-family RobotoMedium
      padding-left: 50px
      position: relative
      cursor: pointer
      margin-top: 46px
      &:after{
        content: ''
        cursor: pointer
        position: absolute
        width: 40px
        height: 40px
        top: -10px
        left: 0px
        background url("/static/img/plusLink.svg") no-repeat
        background-size 100%

      }
    }
  }
}

@media(max-width: 1400px) {
  .main__project_items{
    margin-left: 70px
    margin-right: 70px
  }
}