.category {
  max-width: 1440px
  margin: 0 auto
  margin-top: 70px
  &__wrapper {

  }
  &__header {
    padding: 80px 90px 40px 90px
    background-color: #333333;
    &_title{
      font-size: 20px;
      text-transform uppercase
      font-family RobotoBold
      line-height: 50px
      color white
    }
    &_name{
      font-size: 40px;
      font-family RobotoLight
      color white
      line-height: 50px
      text-transform uppercase

    }
    &_link{
      display: flex
      margin-top: 20px
      flex-wrap wrap
      &-item{
        width: 25%
        flex: 1 0 25%
        padding-top: 20px
        a{
          font-size: 14px;
          border-bottom: 1px solid rgba(255, 255, 255, 0.6);
          transition .3s
          text-transform uppercase
          color white
          &:hover{
            border-bottom: 1px solid rgba(255, 255, 255, 1)
          }
        }
      }
    }
  }
  &__items{
    max-width: 1440px
    margin: 0 auto
    padding: 40px 90px
    &_name{
      font-size: 20px;
      font-family RobotoBold
      line-height: 30px
      text-transform uppercase
      margin-bottom: 20px
    }
    &_wrapper{
      display: flex
      flex-wrap wrap
    }
  }
  &__item{
    flex 1 0 25%
    width: 25%
    position: relative
    max-width: 315px
    cursor: pointer
    &:hover{
      .category__item_text{
        background-color rgba(0,0,0,0.8)
      }
      .category__item_text-name{
        padding-bottom: 38px
      }
    }
    &-tag{
      position: absolute
      font-size 14px
      text-transform uppercase
      line-height: 16px
      background-color #d0011b;
      padding: 17px 9px 17px 30px
      color white
      top: 0px
      left: -20px
      font-family RobotoBold
    }
    &_cover{
      background-repeat no-repeat
      width: 100%
      height: 315px
      background-size 100%
    }
    &_text{
      position: absolute
      width: 100%
      left: 0px
      bottom: 0px
      background-color rgba(0,0,0,0.5)
      transition .5s

      &-desc{
        font-family RobotoLight
        font-size 14px
        color: white
        padding-bottom: 8px
        padding-top: 20px
      }
      &-name{
        padding-bottom: 17px
        font-size 20px
        transition .5s
        font-family: RobotoRegular;
        color white
      }
    }
  }
}