.catalog{
  max-width: 1440px
  margin: 0 auto
  margin-top: 70px
  &__wrapper{

  }
  &__header{
    padding: 80px 0px
    padding-left: 90px
    padding-right: 90px
    background-color: #333333;
    display: flex
    &_title{
      font-family: RobotoLight
      font-size: 40px;
      color white
      text-transform uppercase
      flex 1 0 50%
      width: 50%
    }
    &_desc{
      flex 1 0 50%
      font-size 14px
      color white
      width: 50%
    }
  }
  &__item{
    position: relative
    width: 100%
    height:  300px
    transition .5s
    cursor: pointer
    overflow: hidden
    border-top: 1px solid white
    &:hover{
      height: 490px
      .catalog__item_text{
        max-height: 400px
        padding: 28px 90px 40px 90px
        bottom: 60px
      }
      .catalog__item_text-desc{
        transform scaleY(1)
      }
    }
    &-img{
      position: absolute
      top: 0px
      left 0px
      background-size cover
      background-position center center
      width: 100%
      height: 100%
      background-repeat no-repeat
      transition .5s
    }
    &_text{
      position: absolute
      bottom: 40px
      transition .5s
      left: 0px
      width: 100%
      color white
      padding: 20px 90px 20px 90px
      background-color rgba(0, 0, 0, 0.8)
      display: flex
      max-height: 90px
      &-title{
        font-size: 30px;
        font-family RobotoBold
        line-height: 50px
        width: 45%
        flex 1 0 50%
        transition .5s
        text-transform uppercase
      }
      &-desc{
        transform scaleY(0)
        transition .5s
        flex 1 0 60%
        padding-top: 12px
        display: flex
        flex-wrap wrap
        &_item{
          font-size: 14px;
          text-transform uppercase
          margin-bottom: 20px
          margin-right: 20px
          width:  42%
          transition .5s
          span{
            border-bottom: 1px solid rgba(255, 255, 255, 0.54)
            &:hover{
              border-bottom: 1px solid rgba(255, 255, 255, 1)
            }
          }
        }
      }
    }
  }
}