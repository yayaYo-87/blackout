.footer{
  background-color: #333333;
  max-width: 1440px
  margin: 0 auto
  &__wrapper{
    max-width: 1259px
    margin: 0 auto
    padding: 30px 0px
    display: flex
    justify-content: space-between
    align-items center
  }
  &__logo{
    background-color black
    padding 25px 20px
    img{
      width:96px
    }
  }
  &__cop{
    text-align right
    &_item{
      padding-bottom: 20px
      padding-left: 40px
      color: white
      font-size: 14px;
      font-family RobotoLight
      position: relative
      &:after{
        content ''
        width: 20px
        background-size 100%
        height:  20px
        position: absolute
        top: -2px
        right: -40px
      }
      &-phone{
        &:after{
          background url("/static/img/icon/phonew.svg") no-repeat
        }
      }
      &-mail{
        &:after{
          background url("/static/img/icon/mailw.svg") no-repeat
        }
      }
      &-fc{
        &:after{
          background url("/static/img/icon/fcw.svg") no-repeat
        }
      }
      &-sk{
        &:after{
          background url("/static/img/icon/scw.svg") no-repeat
        }
      }
      &-map{
        &:after{
          background url("/static/img/icon/mapw.svg") no-repeat
        }
      }
      a{
        color: white
        transition .5s
        &:hover{
          color rgba(255, 255, 255, 0.6)
        }
      }
    }
  }
}