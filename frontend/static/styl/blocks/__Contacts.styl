.contacts{
  max-width: 1440px
  margin: 0 auto
  margin-top: 70px
  &__header {
    padding: 80px 90px 0px 90px
    background-color: #333333;
    &_title {
      color: white
      text-transform uppercase
      font-size 40px
      font-family RobotoLight
      line-height: 50px
    }
  }
  &__items{
    display: flex
    padding: 80px 90px 0px 90px
    background-color: #333333;
    &:last-child{
      padding-bottom: 80px
    }
  }
  &__item{
    width: 50%
    flex 1 0 50%
    &_title{
      font-size: 30px;
      color: white
      line-height: 50px
      font-family RobotoBold
      text-transform uppercase
    }
    &_desc{
      padding-top: 40px
      font-size: 14px;
      color: white
      line-height: 20px
    }
    &_text{
      font-size: 20px;
      color: white
      line-height: 30px
      display: block
    }
    &_email{
      font-size: 20px;
      line-height: 30px
      color: white
      padding-top: 60px
    }
  }
  &__map{
    width: 50%
    flex 1 0 50%
    &-id{
      height: 400px
    }
  }
}