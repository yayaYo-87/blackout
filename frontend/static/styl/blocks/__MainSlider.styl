.main__slider{
  height: 700px
  max-height: 700px
  margin: 0 auto
  width: 100%
  margin-top: 40px
  cursor: pointer
  position: relative
  &-prev{
    position: absolute
    background url("/static/img/arow.svg") no-repeat
    background-size 100%
    width: 23px
    height: 40px
    bottom: 254px
    left: 28px
    z-index: 2
    cursor: pointer
  }
  &-next{
    position: absolute
    background url("/static/img/arow.svg") no-repeat
    background-size 100%
    width: 23px
    height: 40px
    bottom: 254px
    transform rotate(180deg)
    right: 28px
    z-index: 2
    cursor: pointer
  }
}
.slider{
  max-height: 700px
  width: 100%
  height: 100%
  overflow: hidden
  position: relative
  &__text{
    width: 100%
    position: absolute
    display: flex
    left: 0px
    background-color rgba(0,0,0,0.6)
    color: white
    padding-left: 90px
    padding-top: 40px
    height: 230px
    bottom: 160px
    align-items flex-end
    padding-bottom: 40px
    &-desc{
      font-size: 14px;
      font-family: RobotoRegular
      width: 315px
      padding-right: 40px
    }
    &-title{
      font-size: 40px;
      font-family: RobotoBold
      text-transform uppercase
      width: 315px
      padding-right: 20px
    }
  }
  &__img{
    width: 100%
    height: 100%
  }
}

