.main__header{
  width: 100%
  margin-top: 70px
  max-height: 700px
  height:  700px
  overflow: hidden
  position: relative
  &_swiperTop{
    height: 700px
    display: flex
    justify-content: center
    align-items center

  }
  &__wrapper{
    position: relative
    z-index: -1
    &:after{
      content ''
      position: absolute
      top: -100px
      left: 0px
      width: 100%
      height: 100%
      background: url("/static/img/shape1.svg") no-repeat
      background-size  50px 50px
      background-position center
      animation: spin 2s linear infinite;
    }
  }
  &-img{
    height: 703px
    position: relative
    z-index: 1
  }
  &-wrapper{
    position: absolute !important
    height: 200px
    width: 100%
    left: 0px
    z-index: 2
    bottom: 0px
    display: flex
    .swiper-wrapper{
      transform none !important
    }
  }
  &_items{
    width: 1259px
    margin 0 auto
    display: flex
    position: relative
    overflow: visible !important
    &:after{
      content: ''
      position: absolute
      right: 100%
      top: 0px
      margin-top: 10px
      width: 100%
      height: 100%
      background-color: rgba(0, 0, 0, 0.6)
    }
    &:before{
      content: ''
      position: absolute
      left: 100%
      top: 0px
      margin-top: 10px
      width: 100%
      height: 100%
      background-color: rgba(0, 0, 0, 0.6)
    }
  }
  &_item{
    background-color: rgba(0, 0, 0, 0.6)
    width: 25% !important
    cursor: pointer
    position: relative
    transition .5s
    margin-top: 10px
    bottom:0px
    &:hover{
      margin-top: 0px
      background-color: rgba(0, 0, 0, 0.9)
      .main__header_item-desc{
        margin-top: 10px
      }
    }

    &-desc{
      font-size 10px
      color: white
      margin-top: 20px
      padding-bottom: 8px
      font-family RobotoBold
      text-transform uppercase
      transition .5s
    }
    &-icon{
      position: absolute
      width: 40px
      bottom: 40px
      height: 40px
      left: 0px
      background-repeat no-repeat
      background-size 100%
    }
    &-name{
      font-size 20px
      color: white
      padding-right: 10px
      font-family RobotoLight
      text-transform uppercase
    }
  }
  .swiper-slide-active{
    background-color: rgba(0,0,0,0.9);
  }
  &__swiper{
    width: 100%
    max-height: 700px
  }
}

@media(max-width: 1400px) {
  .main__header_items{
    margin-left: 70px
    margin-right: 70px
  }
}