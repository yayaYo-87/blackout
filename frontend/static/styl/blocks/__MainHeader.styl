.main__header{
  width: 100%
  margin-top: 70px
  max-height: 700px
  height:  100vh
  overflow: hidden
  position: relative
  &-img{
    position: absolute
    top: 0px
    z-index: -1
    left: 0px
    width: 100%
  }
  &-wrapper{
    position: absolute
    height: 200px
    width: 100%
    left: 0px
    bottom: 0px
    display: flex
  }
  &_items{
    width: 1259px
    margin 0 auto
    display: flex
    position: relative
    &:after{
      content: ''
      position: absolute
      right: 100%
      top: 0px
      margin-top: 10px
      width: 100%
      height: 100%
      background-color: rgba(0, 0, 0, 0.6)
    }
    &:before{
      content: ''
      position: absolute
      left: 100%
      top: 0px
      margin-top: 10px
      width: 100%
      height: 100%
      background-color: rgba(0, 0, 0, 0.6)
    }
  }
  &_item{
    background-color: rgba(0, 0, 0, 0.6)
    width: 25%
    cursor: pointer
    position: relative
    transition .5s
    margin-top: 10px
    bottom:0px

    &:hover{
      margin-top: 0px
      background-color: rgba(0, 0, 0, 0.9)
      .main__header_item-desc{
        margin-top: 10px
      }
    }
    &-desc{
      font-size 10px
      color: white
      margin-top: 20px
      padding-bottom: 8px
      font-family RobotoBold
      text-transform uppercase
      transition .5s
    }
    &-icon{
      position: absolute
      width: 100px
      bottom: 40px
      height: 40px
      left: 0px

    }
    &-name{
      font-size 20px
      color: white
      font-family RobotoLight
      text-transform uppercase
    }
  }
}

@media(max-width: 1400px) {
  .main__header_items{
    margin-left: 70px
    margin-right: 70px
  }
}