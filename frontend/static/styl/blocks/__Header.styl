.header{
  display: flex
  width: 100%
  margin 0px auto
  background-color white
  top: 0px
  left: 0px
  position: fixed
  z-index:  2000
  min-width: 1280px
  height: 70px
  &__wrapper{
    width:  1260px
    margin: 0 auto
    display: flex
    justify-content: space-between
  }
  &__items{
    display: flex
    margin-left: 20px
    margin-right: 150px
  }
  &__item{
    padding: 0 20px
    font-size: 16px;
    color: #333333;
    line-height: 70px
    transition .3s
    cursor: pointer
    &:hover{
      color: rgba(51, 51, 51, 0.5)
    }
    &:last-child{
      margin-right: 0px
      padding-right: 0px
    }
  }
  .router-link-active{
    font-family RobotoBold
  }
  &__logo{
    width: 230px
    position: relative
    &_img{
      position: absolute
      top: 0px
      left: 0px
      background-color black
      padding: 10px 20px
      img{
        width: 190px
        height: 70px
      }
    }
  }
  &__tel{
    font-size: 16px;
    color: #333333;
    line-height: 70px
    position: relative
    transition .3s
    &:hover{
      color: rgba(51, 51, 51, 0.5)
    }
    &:after{
      position: absolute
      content: ''
      background url("/static/img/header/phone.svg")
      background-size 100%
      width: 20px
      height: 20px
      top: 24px
      right: -33px
    }
  }
}

@media (max-width: 1400px) {
  .header{
    &__wrapper{
      margin-right: 60px
      margin-left: 60px
    }
    &__items{
      margin-right: 50px
    }
  }
}